<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="File">
	<insert id="insertFile" parameterType="filedto">
		insert into post_files (post_file_system, post_file_origin, post_pk) 
		values(#{postFileSystem},#{postFileOrigin},#{postPk})
	</insert>
	<select id="getFile" parameterType="_int" resultType="filedto">
		select post_file_pk as postFilePk, post_file_system as postFileSystem, post_file_origin as postFileOrigin, post_pk as postPk
		from post_files where post_pk=#{postPk}
	</select>
	<delete id="deleteByName" parameterType="String">
		delete from post_files where post_file_system = #{postFileSystem}
	</delete>
</mapper>